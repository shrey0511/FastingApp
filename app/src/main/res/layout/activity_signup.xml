<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/cross"
        android:background="@drawable/border2"
        android:onClick="addOperation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#323F4B"
        android:textSize="30dp"
        android:textFontWeight="700"
        android:fontFamily="@font/mulish"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ente your phone number to sign up"
        android:textColor="#323F4B"
        android:textFontWeight="400"
        android:fontFamily="@font/mulish"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish"
        android:text="country"
        android:textSize="12dp"
        android:textAllCaps="true"
        android:textFontWeight="800"
        android:textColor="#323F4B"
        android:letterSpacing="0.1"
        android:layout_marginTop="40dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:padding="10dp"
        app:boxStrokeColor="@color/blue"
        app:boxStrokeWidth="5dp"
        app:cardCornerRadius="8dp"
        android:orientation="vertical"
        >
        <Spinner
            android:id="@+id/countryBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:autofillHints="Sweden"
            android:outlineSpotShadowColor="@color/blue"
            android:backgroundTint="@color/blue"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish"
        android:text="label"
        android:textSize="12dp"
        android:textAllCaps="true"
        android:textFontWeight="800"
        android:textColor="#323F4B"
        android:letterSpacing="0.1"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entry"
            android:textSize="16dp"
            android:fontFamily="@font/mulish"
            android:inputType="textCapWords"
            android:textColorHint="#323F4B"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="continue"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/border"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/divider"
            android:layout_marginTop="20dp"
            android:layout_width="165dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_margin="12dp"/>
        <View
            android:layout_marginTop="20dp"
            android:id="@+id/divider2"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp"
        app:cornerRadius="50dp"
        android:padding="10dp"
        android:layout_width="325dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/fb"
        android:text="   CONTINUE WITH FACEBOOK"
        android:gravity="left"
        android:textSize="15dp"
        android:textColor="#323F4B"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTwitter"
        android:drawableLeft="@drawable/twiiter"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_width="325dp"
        android:layout_gravity="center"
        android:text="   CONTINUE WITH TWITTER"
        app:strokeColor="@color/grey"
        app:strokeWidth="1dp"
        app:cornerRadius="50dp"
        android:gravity="left"
        android:textSize="15dp"
        android:backgroundTint="@color/white"
        android:textColor="#323F4B"
        android:layout_marginTop="10dp"
        />


</LinearLayout>